<body>

    <h1>Login</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-asp-controller="Login" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Usuarios.Email" class="control-label"></label>
                    <input asp-for="Usuarios.Email" class="form-control" />
                    <span asp-validation-for="Usuarios.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Usuarios.Senha" class="control-label"></label>
                    <input asp-for="Usuarios.Senha" class="form-control" />
                    <span asp-validation-for="Usuarios.Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary" />
                </div>
                @{
                    if (ViewBag.Error != null)
                    {
                        <div>@ViewBag.Error</div>
                    }
                }
                <div class="form-group">
                    <a asp-controller="Pessoa" asp-action="Create" class="btn btn-primary">Cadastre-se aqui!</a>
                </div>
            </form>

        </div> <!-- Div que fecha a coluna. -->
    </div><!-- Div que fecha a linha. -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
